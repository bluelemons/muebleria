<%= form_for @client do |f| %>
  <h2 class="form-signin-heading">Editar cliente</h2>

  <div class="form-group">
    <label>DNI</label>
    <%= f.text_field :dni,
      placeholder: '33123456',
      readonly: true,
      required: true,
      class: 'form-control'%>
  </div>
  <div class="form-group">
    <label>Nombre</label>
    <%= f.text_field :name,
      placeholder: 'Juan',
      required: true,
      autofocus: true,
      class: 'form-control'%>
  </div>

  <div class="form-group">
    <label>Direcci√≥n</label>
    <%= f.text_field :address,
      placeholder: 'Derqui 2328',
      required: true,
      class: 'form-control'%>
  </div>

  <div class="form-group">
    <label>Zona</label>
    <%= f.select(:zone_id, Zone.all.map { |zone| [zone.name, zone.id] }, { prompt: 'Seleccione una zona' }, { class: 'form-control' }) %>
  </div>

  <div class="form-group">
    <label>Email</label>
    <%= f.email_field :email,
      placeholder: 'juan@something.com',
      class: 'form-control'%>
  </div>

  <div class="form-group">
    <label>Telefono</label>
    <%= f.text_field :phone,
      placeholder: '342 455 5555',
      class: 'form-control'%>
  </div>

  <div class="form-group">
    <label>Celular</label>
    <%= f.text_field :cellphone,
      placeholder: '54 342 655 5555',
      autofocus: true,
      class: 'form-control'%>
  </div>

  <%= f.submit 'Guardar', class: 'btn btn-lg btn-primary btn-block' %>
<% end %>
