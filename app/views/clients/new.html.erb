<%= form_for @client, html: {class: 'form-signin'} do |f| %>
  <h2 class="form-signin-heading">DNI</h2>

  <%= f.text_field :dni,
                   placeholder: 'Buscar DNI',
                   required: true,
                   autofocus: true,
                   class: 'form-control'%>

  <%= f.submit "Search", class: 'btn btn-lg btn-primary btn-block' %>

<% end %>
