<li class="date<%= ' inactive' if day.expired? %>">
  <h1><%= day.date.strftime('%a') %></h1>
  <h2><%= day.date.strftime('%d') %></h2>

  <% day.turns.each do |turn|%>
    <p><%= turn.employee %>, <%= turn.visits.count %> tareas</p>
    <p>
    <% turn.zones.each do |zone| %>
      <span class="label label-info"><%= zone %></span>
    <% end %>
    </p>
  <% end %>
  <% unless day.expired? %>
    <% if day.turns.empty? %>
      <%= render partial: 'turns/form', locals: { turn: day.turns.new }%>
    <% else %>
      <div class="btn-group btn-group-xs" role="group" aria-label="...">
        <button type="button" class="btn btn-primary">Elegir</button>
        <button type="button" class="btn btn-default">Detalles</button>
      </div>
    <% end %>
  <% end %>
</li>
