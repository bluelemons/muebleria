      <ul>
      <% @employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <% if @employee.id %>
    <div class="form-group">
      <%= f.label :Desabilitar %><br>
      <%= f.check_box :lock %>
    </div>
  <% end %>
  <%= f.submit('Guardar', class: 'btn btn-primary') %>
