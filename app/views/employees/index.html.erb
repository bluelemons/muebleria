<p id="notice"><%= notice %></p>

<h1>Listado de Armadores</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Habilitado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.email %></td>
        <td><%= employee.lock %></td>
        <td>
          <%= link_to 'Detalles', employee, class: 'btn btn-default' %>
          <%= link_to 'Editar', edit_employee_path(employee), class: 'btn btn-default'  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Armador', new_employee_path, class: 'btn btn-primary' %>
