<%= form_tag session_path, class: 'form-signin' do |f| %>
  <h2 class="form-signin-heading">Inicio de session</h2>

  <% if flash[:alert] %>
    <div class="alert alert-danger" role="alert"><%= flash[:alert] %></div>
  <% end %>

  <%= email_field_tag :email, nil,
                      placeholder: 'juan@hotmail.com',
                      required: true,
                      autofocus: true,
                      class: 'form-control' %>

  <%= password_field_tag :password, nil,
                         placeholder: 'secreto tomate pasta',
                         required: true,
                         class: 'form-control' %>

  <%= submit_tag 'Iniciar', class: 'btn btn-lg btn-primary btn-block' %>
<% end %>
