<%= form_tag session_path do |f| %>
  <h2>Inicio de session</h2>

  <% if flash[:alert] %>
    <div class="alert"><%= flash[:alert] %></div>
  <% end %>

  <%= label_tag :email %>
  <%= email_field_tag :email, nil,
                      placeholder: 'juan@hotmail.com',
                      required: true,
                      autofocus: true %>

  <%= label_tag :password %>
  <%= password_field_tag :password, nil,
                         placeholder: 'secreto tomate pasta',
                         required: true %>

  <%= submit_tag 'Sign in' %>
<% end %>
